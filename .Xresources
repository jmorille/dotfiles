URxvt.font: xft:Ubuntu Mono:size=9
URxvt.background: black
URxvt.foreground: white
URxvt.jumpScroll: True
URxvt.skipScroll: True
! URxvt.transparent: True
URxvt.shading: 25
URxvt.blurRadius: 8x1
URxvt.scrollBar: False
URxvt.scrollTtyOutput: False
URxvt.scrollWithBuffer: True
URxvt.scrollTtyKeypress: True
URxvt.saveLines: 2048
URxvt.pastableTabs: True
URxvt.cursorBlink: True
URxvt.pointerBlank: True
URxvt.pointerBlankDelay: 60
URxvt.color4: dodgerblue
URxvt.color12: dodgerblue
URxvt.urgentOnBell: true
! resolving ‘rxvt-unicode’: unknown terminal type
URxvt.termName: rxvt 

! le Control-Shift est déjà pris par urxvt pour gérer l'encodage "manuel" des caractères unicode (standard ISO 14755)
! la solution consiste à désactiver cette fonctionnalité
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.perl-lib: .urxvt/perl
URxvt.perl-ext-common: ...,clipboard
URxvt.keysym.Control-Shift-C:   perl:clipboard:copy
URxvt.keysym.Control-Shift-V:   perl:clipboard:paste

