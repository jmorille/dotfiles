#!/bin/sh
lock() {
    i3lock -c 101010
}

case "$1" in
    lock|l)
        lock
        ;;
    logout|e)
        i3-msg exit
        ;;
    suspend|s)
        lock && sudo pm-suspend
        ;;
    hibernate|h)
        lock && sudo pm-hibernate
        ;;
    reboot|r)
        #systemctl reboot
        ;;
    halt|h)
        #systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|halt}"
        exit 2
esac

exit 0
